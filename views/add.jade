doctype html
html(lang='en')
  head
    title=title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/js/jquery.min.js')
    script(src='/js/calendar/moment.min.js')
    script(src='/js/materialize/bin/materialize.min.js')
    script(src="https://cdn.firebase.com/js/client/2.3.2/firebase.js")
    script(src='/js/add.js')
  body
    nav
        div.nav-wrapper.green.accent-4
            a.brand-logo(href='/') Timetable
            ul.right.hide-on-med-and-down#nav-mobile
                li
                    a(href="/add") Add
                li
                    a(href="/calendar") Calendar
                li
                    a(href="/logout") Logout
    div.container
        h1 Add Timetable
        div.row
            form.col.s12
                div.row
                    div.input-field.col.s12
                        input(value="Eat Chipotle" id="add_goal" type="text" name="goal" required)
                        label(for="add_goal") Add Goal
                div.row
                    div.input-field.col.s6
                        input.datepicker(type="date", id="deadline_date", name="deadline_date")
                        label(for="deadline_date") Deadline Date
                    div.input-field.col.s6
                        select#deadline_time
                            option(value="" disabled selected) Choose deadline time
                            option(value="00:00") 12:00 AM
                            option(value="00:30") 12:30 AM
                            option(value="01:00") 1:00 AM
                            option(value="01:30") 1:30 AM
                            option(value="02:00") 2:00 AM
                            option(value="02:30") 2:30 AM
                            option(value="03:00") 3:00 AM
                            option(value="03:30") 3:30 AM
                            option(value="04:00") 4:00 AM
                            option(value="04:30") 4:30 AM
                            option(value="05:00") 5:00 AM
                            option(value="05:30") 5:30 AM
                            option(value="06:00") 6:00 AM
                            option(value="06:30") 6:30 AM
                            option(value="07:00") 7:00 AM
                            option(value="07:30") 7:30 AM
                            option(value="08:00") 8:00 AM
                            option(value="08:30") 8:30 AM
                            option(value="09:00") 9:00 AM
                            option(value="09:30") 9:30 AM
                            option(value="10:00") 10:00 AM
                            option(value="10:30") 10:30 AM
                            option(value="11:00") 11:0 PAM
                            option(value="11:30") 11:30 AM
                            option(value="12:00") 12:00 PM
                            option(value="12:30") 12:30 PM
                            option(value="13:00") 1:00 PM
                            option(value="13:30") 1:30 PM
                            option(value="14:00") 2:00 PM
                            option(value="14:30") 2:30 PM
                            option(value="15:00") 3:00 PM
                            option(value="15:30") 3:30 PM
                            option(value="16:00") 4:00 PM
                            option(value="16:30") 4:30 PM
                            option(value="17:00") 5:00 PM
                            option(value="17:30") 5:30 PM
                            option(value="18:00") 6:00 PM
                            option(value="18:30") 6:30 PM
                            option(value="19:00") 7:00 PM
                            option(value="19:30") 7:30 PM
                            option(value="20:00") 8:00 PM
                            option(value="20:30") 8:30 PM
                            option(value="21:00") 9:00 PM
                            option(value="21:30") 9:30 PM
                            option(value="22:00") 10:00 PM
                            option(value="22:30") 10:30 PM
                            option(value="23:00") 11:00 PM
                            option(value="23:30") 11:30 PM
                        label(for="deadline_time") Deadline Time
                div.row
                    div.input-field.col.s12
                        input(value="Personal Project" id="type" type="text" name="type" required)
                        label(for="type") Type
                div.row
                    div.input-field.col.s4
                        input(value="3" id="time_needed" type="number" name="time_needed" step="any" required)
                        label(for="time_needed") Time Needed
                    div.input-field.col.s4
                        input(value="2" id="num_chunks" type="number" name="num_chunks" step="any" required)
                        label(for="num_chunks") Number of Chunks
                    div.input-field.col.s4
                        input.datepicker(type="date" id="starting_time" name="starting_time")
                        label(for="starting_time") Starting
                div.row
                    div.input-field.col.s12
                        input(placeholder="christinakim2016@u.northwestern.edu, nzhu94@gmail.com, kevinchen@shark.com " id="input_members" type="text" name="input_members")
                        label(for="input_members") Input Needed
                div.row
                    div.input-field.col.s6
                        input(placeholder="1 hour" id="input_duration" type="number" min="0" name="input_duration")
                        label(for="input_duration") Input Length
                    div.input-field.col.s6
                        select(multiple)#input_time
                            option(value="" disabled selected) Choose time in project to get input
                            option(value=25) 25%
                            option(value=50) 50%
                            option(value=75) 75%
                            option(value=100) 100%
                        label Input Time
                div.row
                    div.input-field.col.s12
                        textarea.materialize-textarea(placeholder="Postmates" id="resources" type="text" name="resources")
                        label(for="resources") Resources
                button.btn.waves-effect.green.waves-light(type="submit") Schedule
    footer.page-footer.white
        div.footer-copyright.green.accent-4
            div.container Made at WildHacks by #[a(target="_blank", href="https://twitter.com/ChristinaHKim") Christina Kim] and #[a(target="_blank", href="https://twitter.com/nicolelzhu") Nicole Zhu]
